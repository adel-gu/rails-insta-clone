= simple_form_for @pic, html: { multipart: true } do |form|
  - if @pic.errors.any?
    #errors
      %h2
      = pluralize(@pic.errors.count, "error")
      prevented this Pic from saving
      %ul
        - @pic.errors.full_messages.each do |msg|
          %li= msg

  .form_group
    = form.input :title, input_html: { class: 'form_control' }
  .form_group
    = form.input :description, input_html: { class: 'form_control' }
  = form.button :submit, class: "btn btn-info"